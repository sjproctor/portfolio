<%= render "shared/header", title: t('contact') %>
<div class="m-4 lg:m-7">
  <h3 class="text-xl my-1">I would love to connect with you!</h3>
  <br />
  <p>You can reach me on LinkedIn</p>
  <p>Send me an email at sproctor@gmail.com</p>
  <br />
  <p>Or fill our the form below.</p>
  <div class="my-2">
    <%= form_with do |form| %>
      <div class="lg:flex">
        <div class="lg:w-1/3 lg:mr-1">
          <%= form.label :first_name, "First Name", class: "font-bold mb-1 md:mb-0 pr-4" %>
          <%= form.text_field :first_name, class: "mt-1 w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
        <div class="lg:w-1/3">
          <%= form.label :last_name, "Last Name", class: "block font-bold mb-1 md:mb-0 pr-4" %>
          <%= form.text_field :last_name, class: "mt-1 block w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
      </div>
      <div class="lg:w-2/3">
        <%= form.label :email, "Email", class: "block font-bold mb-1 md:mb-0 pr-4" %>
        <%= form.text_field :email, class: "mt-1 block w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        <%= form.label :message, "Message", class: "block font-bold mb-1 md:mb-0 pr-4" %>
        <%= form.text_area :message, class: "mt-1 block w-full rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
        <%= form.submit "Send Email", class: "my-2 p-2 font-bold rounded-md border border-black hover:cursor-pointer bg-gray-100" %> 
    <% end %>
  </div>
</div>


 
